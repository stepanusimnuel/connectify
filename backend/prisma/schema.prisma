generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  password    String
  role        Role
  createdAt   DateTime  @default(now())

  // New fields for workers
  profilePic  String?   // URL foto profil
  location    String?   // Domisili
  specialty   String?   // Bidang spesifik, ex: "UI/UX Design"
  description String?   // Deskripsi
  priceStart  Int?      // Harga mulai dari
  totalJobs   Int?      // Berapa job telah diselesaikan
  rating      Float?    // Rating rata-rata
}


enum Role {
  FREELANCER
  COMPANY
  ADMIN
}