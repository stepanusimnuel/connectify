generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  password    String
  role        Role
  createdAt   DateTime  @default(now())

  // New fields for workers
  profilePic  String?   // URL foto profil
  location    String?   // Domisili
  specialty   String?   // Bidang spesifik, ex: "UI/UX Design"
  description String?   // Deskripsi
  priceStart  Int?      // Harga mulai dari
  totalJobs   Int?      // Berapa job telah diselesaikan
  rating      Float?    // Rating rata-rata

  jobsPosted      Job[]          @relation("UserJobs")        // sebagai company
  applications    Application[]  @relation("UserApplications") // sebagai freelancer
}


enum Role {
  FREELANCER
  COMPANY
  ADMIN
}

model Job {
  id                  Int        @id @default(autoincrement())
  title               String
  description         String
  role                String
  minSalary           Int
  maxSalary           Int
  image               String?
  location            Location
  applicationDeadline DateTime
  contractDeadline    DateTime
  status              JobStatus  @default(OPEN)
  companyId           Int
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt

  company             User       @relation("UserJobs", fields: [companyId], references: [id])
  applications        Application[]
}

model Application {
  id          Int       @id @default(autoincrement())
  jobId       Int
  freelancerId Int
  status      String     @default("pending") // pending, approved, rejected
  createdAt   DateTime   @default(now())

  job         Job        @relation(fields: [jobId], references: [id])
  freelancer  User       @relation("UserApplications", fields: [freelancerId], references: [id])
}

enum Location {
  Jakarta
  Bandung
  Surabaya
  Semarang
  Yogyakarta
  Malang
}

enum JobStatus {
  OPEN
  CLOSED
  ONGOING
  COMPLETED
}
